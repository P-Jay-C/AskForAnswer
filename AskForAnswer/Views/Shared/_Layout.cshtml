<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AskForAnswer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AskForAnswer.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .navbar-custom {
            background-color: #004d99; /* Customize with your color */
        }

            .navbar-custom .navbar-brand, .navbar-custom .nav-link {
                color: #fff;
            }

        .footer-custom {
            background-color: #f2f2f2;
        }

        .card-custom {
            border-left: 4px solid #004d99; /* Customize with your color */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Questions" asp-action="Index">AskForAnswer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Questions" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Questions" asp-action="Create">Submit a question</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
	                        <li class="nav-item dropdown">
		                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
			                        Admin
		                        </a>
		                        <ul class="dropdown-menu">
			                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ListUsers">Manage Users</a></li>
			                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ListQuestions">Manage Questions</a></li>
		                        </ul>
	                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer-custom text-muted">
        <div class="container">
            &copy; 2023 - AskForAnswer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
